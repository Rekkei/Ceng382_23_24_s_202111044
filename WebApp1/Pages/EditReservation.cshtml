@page "{id:int}"
@model WebApp1.Pages.EditReservationModel
@{
    ViewData["Title"] = "Edit Reservation";
}
<h2>Edit Reservation</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Reservation.RoomId">Room:</label>
        <select asp-for="Reservation.RoomId" class="form-control" asp-items="Model.Rooms"></select>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.DateTime">Reservation Date:</label>
        <input asp-for="Reservation.DateTime" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
