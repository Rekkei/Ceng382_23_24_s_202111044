@page
@model AddRoomModel
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
     <link rel="stylesheet" href="~/css/mycss.css" />
 
 <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Room Managament</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                 <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/AddRoom">Add Room</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/ListRooms">List Rooms</a></li>
                        
                    </ul>   
                </nav> 
                
            </div>
           
        </nav>
    </header>
@using (Html.BeginForm("OnPost", "AddRoom"))
{ 
        
        <div>
            <label asp-for="Room.RoomName">Room Name:</label>
            <input asp-for="Room.RoomName" required />
            <span asp-validation-for="Room.RoomName"></span>
        </div>
        <div>
            <label asp-for="Room.Capacity">Capacity:</label>
            <input asp-for="Room.Capacity" type="number" required />
            <span asp-validation-for="Room.Capacity"></span>
        </div>
        <button type="submit">Add Room</button>  
}

    