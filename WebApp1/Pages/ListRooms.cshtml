@page
@model ListRoomsModel

@* Add a link to the Bootstrap stylesheet if not already included *@

<table class="table">
    <thead>
        <tr>
            <th>Room Name</th>
            <th>Capacity</th>
            <th></th> <!-- New column for delete button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.RoomName</td>
                <td>@room.Capacity</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@room.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
