@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Model.ProfilePicture" class="form-label">Profile Picture</label>
        <input asp-for="Model.ProfilePicture" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Model.Bio" class="form-label">Bio</label>
        <textarea asp-for="Model.Bio" class="form-control" rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
